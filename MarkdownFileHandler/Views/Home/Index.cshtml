@model MarkdownFileHandler.Models.HomeModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>@System.Configuration.ConfigurationManager.AppSettings["sc:Brand"]</h1>
    <p class="lead">To connect your OneDrive for Business and SharePoint environment, sign in using the link in the top right corner.</p>
</div>

<div class="row">
    @if (!string.IsNullOrEmpty(Model.SignInName))
    {
        <div class="col-md-6">
            <h2>Signed In</h2>
            <p>Welcome @Model.DisplayName. To try out @System.Configuration.ConfigurationManager.AppSettings["sc:Brand"], hop over to <a href="@Model.OneDriveUrl">your OneDrive and try it out!</a></p>
            <p><a class="btn btn-default" href="@Model.OneDriveUrl">Try it in OneDrive &raquo;</a></p>
        </div>
    }
    else
    {
        <div class="col-md-6">
            <h2>User Sign-In</h2>
            <p>@Html.ActionLink("Sign in as a user", "SignIn", "Account") to enable the file handler extension on your account.</p>
      </div>
    }

    <div class="col-md-6">
        <h2>Admin Sign-In</h2>
        <p>@Html.ActionLink("Sign in as an admin", "SignInAdmin", "Account") to enable the file handler extension for your entire organization.</p>
    </div>
</div>
